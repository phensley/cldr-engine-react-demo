{
  "compilerOptions": {
    "outDir": "build/dist",
		"baseUrl": ".",
    "target": "es5",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "traceResolution": false,
    "listEmittedFiles": false
  },
	"include": [
		"src/**/*"
	],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "scratch"
  ]
}
